<form class="editPage" action="/restaurants/{{ restaurant.id }}/edit" method="POST">

  餐廳名稱：<input type="text" placeholder="餐廳名稱" name="name" value="{{restaurant.name}}" style="margin:10px;" required>
  <br />
  餐廳英文名稱：<input type="text" placeholder="餐廳英文名稱" name="name_en" value="{{ restaurant.name_en }}" style="margin:10px;">
  <br />
  <label>餐廳分類：
    <select name="category" required oninvalid="setCustomValidity('請選擇餐廳分類！');" oninput="setCustomValidity('');">
      <option selected disabled hidden>
      </option>
      <option>中東料理</option>
      <option>義式餐廳</option>
      <option>日本料理</option>
      <option>美式</option>
      <option>酒吧</option>
      <option>咖啡</option>
    </select>
  </label style="margin:10px;">
  <br />
  圖片URL：<input type="text" placeholder="image" name="image" value="{{ restaurant.image }}"
    style="width: 600px; margin:10px;">
  <br />
  地址：<input type="text" placeholder="location" name="location" value="{{ restaurant.location }}"
    style="width: 300px; margin:10px;">
  <br />
  電話號碼：<input type="text" placeholder="phone" name="phone" value="{{ restaurant.phone }}" style="margin:10px;">
  <br />
  Google地圖連結：<input type="text" placeholder="google_map" name="google_map" value="{{ restaurant.google_map }}" style="
    margin:10px; width: 300px">
  <br />
  餐廳評分：<input type="number" min="1.0" max="5.0" step="0.1" placeholder="" name="rating" value="{{ restaurant.rating }}"style="margin:10px; width: 50px">
  <br />
  餐廳介紹：<br /><textarea rows="7" placeholder="" name="description">{{ restaurant.description }}</textarea>
  <br />
  <button type="submit">儲存</button>
  <a href="/">返回首頁</a>
</form>